<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Dev-Skills</title>
</head>
<body>
    <h1>Skills</h1>
    <ul>
      <% skills.forEach(function(skill) { %>
        <li>
          <form action="/skills/<%= skill.id %>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">X</button>
            <a href="/skills/<%= skill.id %>"><%= skill.language %></a>
            - 
            <%= skill.level %>
          </form>
        </li>
      <% }); %>
    </ul>
    <a href="/skills/new">Add Skill</a>
</body>
</html>